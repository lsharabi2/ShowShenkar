<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DepartmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="il.ac.shenkar.endofyearshenkar.activities.DepartmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/shenkarYellow"
        android:orientation="vertical">

        <il.ac.shenkar.endofyearshenkar.utils.BoldAlefTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/shenkarYellow"
            android:gravity="center"
            android:textColor="@color/black"
            android:textDirection="rtl"
            android:textSize="20dp"
            android:textStyle="bold" />

        <il.ac.shenkar.endofyearshenkar.utils.BoldAlefTextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/shenkarYellow"
            android:gravity="center"
            android:textColor="@color/black"
            android:textDirection="rtl"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="7"
        android:background="@color/shenkarYellow"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

    </FrameLayout>

    <android.support.v7.widget.SearchView
        android:id="@+id/activity_department_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/projects"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layoutDirection="rtl" />

</LinearLayout>
