<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RoutesLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context="il.ac.shenkar.showshenkar.activitiesar.showshenkar.RoutesActivity">

    <il.ac.shenkar.endofyearshenkar.utils.BoldAlefTextView
        android:id="@+id/RoutesHeadline"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:background="@color/shenkarYellow"
        android:gravity="center"
        android:text="@string/btn_fav_routes"
        android:textColor="@color/black"
        android:textDirection="rtl"
        android:textSize="25dp"
        android:textStyle="bold" />

    <view
        android:id="@+id/routes"
        class="android.support.v7.widget.RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layoutDirection="rtl" />
</LinearLayout>
